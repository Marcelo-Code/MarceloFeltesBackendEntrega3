<h2>Actualizar Producto</h2>

<div class="container">

  <div class="card">
    <form id="updateProductForm">
      <label for="title">Título:</label><br />
      <input type="text" id="title" name="title" value="{{product.title}}" /><br
      /><br />

      <label for="description">Descripción:</label><br />
      <textarea
        id="description"
        name="description"
      >{{product.description}}</textarea><br /><br />

      <label for="category">Categoría:</label><br />
      <input
        type="text"
        id="category"
        name="category"
        value="{{product.category}}"
      /><br /><br />

      <label for="price">Precio:</label><br />
      <input
        type="number"
        id="price"
        name="price"
        value="{{product.price}}"
      /><br /><br />

      <label for="stock">Stock:</label><br />
      <input
        type="number"
        id="stock"
        name="stock"
        value="{{product.stock}}"
      /><br /><br />

      <div class="button-container">
        <button type="submit">Actualizar</button>
      </div>
    </form>
  </div>

  <div class="button-container">
    <a href="/"><button class="inicio-button">Inicio</button></a>
  </div>
</div>
<script>
  document.getElementById("updateProductForm").addEventListener("submit",
  function(event) { event.preventDefault(); // Prevent default form submission
  const product = { _id: "{{product._id}}", title:
  document.getElementById("title").value, description:
  document.getElementById("description").value, category:
  document.getElementById("category").value, price:
  document.getElementById("price").value, stock:
  document.getElementById("stock").value, }; updateProduct(product); });
</script>